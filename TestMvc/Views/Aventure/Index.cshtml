@using TestMvc.Core.Data.Models
@model List<Aventure>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Aventure Page";
    //string titre = "ceeci est un titre";
    //int[] tab = new int[] { 1, 2, 3, 4, 5 };
}
<h1 class="text-center">@ViewBag.Titre</h1>
<div class="row justify-content-center">
    <a asp-controller="Aventure" asp-action="Create" class="btn btn-primary text-center">Nouvelle Aventure</a>
</div>
<h2 class="text-center">Vos dernieres aventures</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <a href="#" class="card border m-2 text-center" style="width:9rem">
            <div class="card-body">
                @item.Titre
            </div>
        </a>
    }
</div>